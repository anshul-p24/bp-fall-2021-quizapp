<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity"
        android:background="@color/backgroundColor">

    <TextView
            android:text="Syntax Quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:id="@+id/textView3"
            android:textSize="33dp"
            android:letterSpacing=".45"
            android:textStyle="bold"/>


    <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="125dp"
            app:cardCornerRadius="40dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/backgroundDark"
        >


            <TextView
                    android:text="Hello!"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
            />
            <TextView
                    android:text="Please enter your name:"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
            />

            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="50dp"
                    android:hint="Name"
                    android:textColorHint="?android:attr/textColorTertiaryInverse"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textAlignment="center" android:id="@+id/editTextTextPersonName2" android:textSize="15dp"/>

            <Button
                    android:id="@+id/button2"
                    android:text="Start Quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:backgroundTint="@color/backgroundColor" android:onClick="startQuiz"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>