<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizQuestionActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:paddingTop="80dp">
            <TextView
                    android:text="Who developed Java?"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textAlignment="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center">
                <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="274dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                />
                <TextView
                        android:text="1/5"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" android:id="@+id/textView2"
                        android:textAlignment="center" android:textSize="16dp"
                />
            </LinearLayout>
            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/radioGroup"
                    android:layout_marginEnd="0dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp">
                <RadioButton
                        android:text="James Franco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton1"
                        android:textSize="16sp"
                        android:minHeight="36dp"
                />
                <RadioButton
                        android:text="James Gosling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton2"
                        android:textSize="16sp"
                        android:minHeight="36dp"
                />
                <RadioButton
                        android:text="Ryan Gosling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton3"
                        android:textSize="16sp"
                        android:minHeight="36dp"
                />
                <RadioButton
                        android:text="Notch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton4"
                        android:textSize="16sp"
                        android:minHeight="36dp"
                />

            </RadioGroup>
            <Button
                    android:text="Submit"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp" android:onClick="submitQuestion"
            />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>